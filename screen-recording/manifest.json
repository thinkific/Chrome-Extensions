{
   "name":"Thinkific Screen Capture",
   "short_name":"TCapture",
   "author":"Thinkific",
   "version":"0.1",
   "manifest_version":2,
   "minimum_chrome_version":"49",
   "description":"Record screen activity, camera, mic, tab, speakers in 4K HD video format (using RecordRTC)",
   "homepage_url":"https://github.com/thinkific/Chrome-Extensions/tree/master/screen-recording",
   "background":{
      "scripts":[
         "background/background.common.js",
         "background/background.js",
         "background/background.desktopCapture.js",
         "background/background.tabCapture.js",
         "background/background.badgeText.js",
         "background/background.getUserMedia.js",
         "background/background.messaging.js",
         "background/background.players.js",
         "RecordRTC/MediaStreamRecorder.js",
         "RecordRTC/MultiStreamRecorder.js",
         "RecordRTC/StereoAudioRecorder.js",
         "RecordRTC/DiskStorage.js"
      ],
      "persistent":false
   },
   "content_scripts":[
      {
        "matches":[
          "<all_urls>"
        ],
        "js":[
            "background/background.contentScript.js"
        ],
        "all_frames": true,
        "run_at": "document_start"
      }
    ],
   "browser_action":{
      "default_icon":"images/thinkific-logo-square-420.png",
      "default_title":"Record Your Screen, Tab or Camera",
      "default_popup": "dropdown.html"
   },
   "icons":{
      "16":"images/thinkific-logo-square-420.png",
      "22":"images/thinkific-logo-square-420.png",
      "32":"images/thinkific-logo-square-420.png",
      "48":"images/thinkific-logo-square-420.png",
      "128":"images/thinkific-logo-square-420.png"
   },
   "permissions":[
      "desktopCapture",
      "storage",
      "tabs",
      "tabCapture",
      "activeTab",
      "<all_urls>",
      "identity",
      "https://www.googleapis.com/*"
   ],
   "oauth2": {
       "client_id": "41556190767-44cbqasurg3dhfr9hmj1v90q5v8r9v46.apps.googleusercontent.com",
       "scopes": [
         "https://www.googleapis.com/auth/youtube.upload",
         "https://www.googleapis.com/auth/youtube"
       ]
   },
   "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
   "web_accessible_resources":[
      "images/thinkific-logo-square-420.png"
   ],
   "options_ui":{
      "page":"options.html",
      "chrome_style":false,
      "open_in_tab": true
   }
}
